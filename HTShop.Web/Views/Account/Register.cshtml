@model HTShop.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts.cshtml";
}


<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(false, "", new { @class = "error" })
        if(ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Chúc mừng ban! </strong> đã đăng ký thành công
                <br>Vui lòng click vào <a href="/dang-nhap">đây</a> để đăng nhập
            </div>
        }
        <div class="  register-top-grid">
            <h3>THÔNG TIN CÁ NHÂN</h3>
            <div class="mation">
                <span>Họ tên<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName)

                <span>Email<label>*</label></span>
                @Html.TextBoxFor(model => model.Email)

                <span>Số điện thoại<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber)

                <span>Địa chỉ</span>
                @Html.TextBoxFor(model => model.Address)
            </div>
            <div class="clearfix"> </div>
            <a class="news-letter" href="#">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Sign Up</label>
            </a>
        </div>
        <div class="  register-bottom-grid">
            <h3>THÔNG TIN ĐĂNG NHẬP</h3>
            <div class="mation">
                <span>Tên đăng nhập<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
                <span>Mật khẩu<label>*</label></span>
                @Html.TextBoxFor(model => model.Password)
                <span>Nhập lại mật khẩu<label>*</label></span>
                @Html.TextBoxFor(model => model.Password)
            </div>
        </div>




        <div class="clearfix"> </div>
        <div class="register-but">
            <input type="submit" value="submit">
            <div class="clearfix"> </div>
        </div>
    }
</div>
    


